@model UrlShort.Models.Url
@{
    ViewBag.Title = "Shorten URL";
}

<h2>Index</h2>
Enter URL to shorten

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBoxFor(model => Model.LongUrl,
            new
            {
                placeholder = "URL to shorten",
                @class = "form-control"
            })
    </div>
    if (!string.IsNullOrEmpty(Model.LongUrl))
    {
        <div>
            <a href="@Model.ShortUrl" target="_blank">@Model.ShortUrl</a>
        </div>
    }
    <input type="submit" class="btn btn-primary" value="Shorten" />
}