@model UrlShort.Models.Url
@{
    ViewBag.Title = "Shorten URL";
}

<h2>Index</h2>
Main view for shortening URLs

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBoxFor(model => Model.UrlLong,
            new
            {
                placeholder = "URL to shorten",
                @class = "form-control"
            })
    </div>
    <input type="submit" class="btn btn-primary" value="Shorten" />
}